@import"./styles/iconfont.wxss";

/* 微信小程序不支持通配符 */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色 */
/* 通过变量来实现 */
page{
  /* 定义主题颜色 */
  --themeColor: #2d2d2d;
/* 定义统一的字体大小，以375px为例 
   1px = 2rpx
   14px = 28rpx*/
   font-size: 28rpx;
}

/* 全局样式 */
image{
  width: 100%;
}