<view class="yg_index">
<!-- 搜索框结构 开始-->
  <SearchInput></SearchInput>
<!-- 搜索框结构 结束-->
<!-- 轮播图结构 开始 -->
  <view class="index_swiper">
    <!-- 
    1 swiper标签存在默认的宽度和高度
      100%*150px
    2 image标签也存在默认的宽度和高度
      320px*240px
    3 设计图片和轮播图
      1 先看一下原图的宽高 750*340
      2 让图片的高度自适应 宽度等于100% 
      3 让swiperr标签的高度 变成和图片的高一样即可
    4 图片标签
      mode属性 渲染模式
        widthFix 让图片的标签宽高 和 图片标签的内容宽高都等比例的发生变化
    -->
    <swiper autoplay="{{true}}" indicator-dots="{{true}}" circular="{{true}}">
      <swiper-item 
      wx:for="{{swiperList}}" 
      wx:key="goods_id"
      >
        <navigator bind:tap="stringChange" data-index="{{item.navigator_url}}">
          <image mode="widthFix" src="{{item.image_src}}" />
        </navigator>
      </swiper-item>
    </swiper>
  </view>
<!-- 轮播图结构 结束 -->
<!-- 导航结构 开始 -->
  <view class="index_cate">
    <navigator 
    wx:for="{{catesList}}"
    wx:key="name"
    url="/pages/category/category"
    open-type="switchTab"
    >
      <image mode="widthFix" src="{{item.image_src}}">
        
      </image>
    </navigator>
  </view>
<!-- 导航结构 结束 -->
<!-- 楼层结构 开始 -->
  <view class="index_floor"
  wx:for="{{floorList}}"
  wx:for-item="item1"
  wx:for-index="index1"
  wx:key="floor_title"
  >
    <view class="floor_group">
      <!-- 标题 -->
      <view class="floor_title">
        <image mode="widthFix" src="{{item1.floor_title.image_src}}"/>
      </view>
      <!-- 内容 -->
      <view class="floor_list">
        <navigator 
        wx:for="{{item1.product_list}}"
        wx:for-item="item2"
        wx:for-index="index2"
        wx:key="name"
        bind:tap="stringChangeOther" data-index="{{item2.navigator_url}}"
        >
          <image mode="{{index2===0?'widthFix':'scaleToFill'}}" src="{{item2.image_src}}" />
        </navigator>
      </view>
    </view>
  </view>
<!-- 楼层结构 结束 -->
</view>